---
import { skills } from '../data/portfolio';
---

<section id="skills" class="section">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">Skills & Technologies</h2>
      <p class="section-subtitle">Tools and technologies I work with to build amazing products</p>
    </div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
      {skills.map((category, catIndex) => {
        // Determine icon based on category
        let iconPath = "";
        if (category.category.toLowerCase().includes("frontend")) {
          iconPath = "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z";
        } else if (category.category.toLowerCase().includes("backend")) {
          iconPath = "M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01";
        } else {
          iconPath = "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z";
        }
        
        return (
          <div class="card-highlight animate-fade-in-up" style={`animation-delay: ${catIndex * 0.1}s`}>
            <div class="flex items-center gap-3 mb-6">
              <div class="p-2 rounded-lg bg-gh-accent-subtle border border-gh-accent-muted">
                <svg class="w-6 h-6 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gh-fg-default">{category.category}</h3>
            </div>
            
            <div class="space-y-3">
              {category.items.map((skillName) => {
                // Universal function to convert skill name to icon name
                const convertSkillToIcon = (name: string) => {
                  // Special case for AWS
                  if (name === "AWS") {
                    return { icon: "amazonwebservices", isWordmark: true };
                  }
                  
                  // Universal conversion: lowercase, remove spaces and dots
                  const icon = name.toLowerCase().replace(/\s+/g, '').replace(/\./g, '');
                  return { icon, isWordmark: false };
                };
                
                const { icon, isWordmark } = convertSkillToIcon(skillName);
                
                const iconUrl = isWordmark 
                  ? `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${icon}/${icon}-original-wordmark.svg`
                  : `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${icon}/${icon}-original.svg`;
                
                return (
                  <div class="flex items-center gap-3 p-3 rounded-lg bg-gh-canvas-subtle border border-gh-border-default hover:border-gh-accent-muted hover:bg-gh-canvas-inset transition-all group">
                    <div class="w-8 h-8 flex items-center justify-center group-hover:scale-110 transition-transform">
                      <img 
                        src={iconUrl}
                        alt={skillName}
                        class="w-7 h-7 devicon-img"
                        data-icon={icon}
                        data-is-wordmark={isWordmark}
                      />
                    </div>
                    <span class="text-sm font-medium text-gh-fg-default flex-1">{skillName}</span>
                    <svg class="w-4 h-4 text-gh-success-fg opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                );
              })}
            </div>
          </div>
        );
      })}
    </div>

    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-lg bg-gh-canvas-subtle border border-gh-border-default">
        <svg class="w-6 h-6 text-gh-success-fg animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <p class="text-gh-fg-muted text-sm md:text-base">
          Continuously learning and exploring new technologies
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  // Fallback for devicon images
  document.addEventListener('DOMContentLoaded', () => {
    const deviconImages = document.querySelectorAll('.devicon-img');
    deviconImages.forEach((img) => {
      const imgElement = img as HTMLImageElement;
      imgElement.addEventListener('error', () => {
        const icon = imgElement.dataset.icon;
        const isWordmark = imgElement.dataset.isWordmark === 'true';
        
        if (icon) {
          if (isWordmark && !imgElement.src.includes('-plain-wordmark.svg')) {
            // Wordmark variant: try plain-wordmark if original-wordmark fails
            imgElement.src = `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${icon}/${icon}-plain-wordmark.svg`;
          } else if (!isWordmark && !imgElement.src.includes('-original-wordmark.svg')) {
            // Regular variant: try original-wordmark if original fails
            imgElement.src = `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${icon}/${icon}-original-wordmark.svg`;
          }
        }
      });
    });
  });
</script>
