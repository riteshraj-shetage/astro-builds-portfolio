---
import { personalInfo } from "../data/portfolio";
import Icon from "./Icon.astro";
---

<section id="contact" class="section">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">Get In Touch</h2>
      <p class="section-subtitle">
        I'm always interested in hearing about new projects and opportunities.
        Whether you have a question or just want to say hi, feel free to reach
        out!
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Left Column: Contact Links -->
        <div class="space-y-4 animate-fade-in-up">
          <h3 class="text-2xl font-semibold mb-6 text-gh-fg-default">
            Connect with me
          </h3>

          <a
            href={`mailto:${personalInfo.email}`}
            class="card group no-underline flex items-center gap-4"
          >
            <div
              class="p-3 rounded-lg bg-gh-accent-subtle border border-gh-accent-muted flex-shrink-0 group-hover:bg-gh-accent-muted transition-colors"
            >
              <Icon name="mail" size={24} class="w-6 h-6 text-gh-accent-fg" />
            </div>
            <div class="text-left">
              <h4 class="text-lg font-semibold text-gh-fg-default mb-1">
                Email
              </h4>
              <p class="text-gh-fg-muted text-sm">{personalInfo.email}</p>
            </div>
          </a>

          <a
            href={personalInfo.github}
            target="_blank"
            rel="noopener noreferrer"
            class="card group no-underline flex items-center gap-4"
          >
            <div
              class="p-3 rounded-lg bg-gh-accent-subtle border border-gh-accent-muted flex-shrink-0 group-hover:bg-gh-accent-muted transition-colors"
            >
              <Icon
                name="mark-github"
                size={24}
                class="w-6 h-6 text-gh-accent-fg"
              />
            </div>
            <div class="text-left">
              <h4 class="text-lg font-semibold text-gh-fg-default mb-1">
                GitHub
              </h4>
              <p class="text-gh-fg-muted text-sm">View my repositories</p>
            </div>
          </a>

          <a
            href={personalInfo.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="card group no-underline flex items-center gap-4"
          >
            <div
              class="p-3 rounded-lg bg-gh-accent-subtle border border-gh-accent-muted flex-shrink-0 group-hover:bg-gh-accent-muted transition-colors"
            >
              <svg
                class="w-6 h-6 text-gh-accent-fg"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </div>
            <div class="text-left">
              <h4 class="text-lg font-semibold text-gh-fg-default mb-1">
                LinkedIn
              </h4>
              <p class="text-gh-fg-muted text-sm">Connect with me</p>
            </div>
          </a>
        </div>

        <!-- Right Column: Contact Form -->
        <div
          class="card-highlight animate-fade-in-up"
          style="animation-delay: 0.2s"
        >
          <h3 class="text-2xl font-semibold mb-6 text-gh-fg-default">
            Send a Message
          </h3>
          <form class="space-y-5">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gh-fg-default mb-2"
              >
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2.5 bg-gh-canvas-inset border border-gh-border-default rounded-md text-gh-fg-default focus:outline-none focus:ring-2 focus:ring-gh-accent-emphasis focus:border-transparent transition-all"
                placeholder="Your name"
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gh-fg-default mb-2"
              >
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2.5 bg-gh-canvas-inset border border-gh-border-default rounded-md text-gh-fg-default focus:outline-none focus:ring-2 focus:ring-gh-accent-emphasis focus:border-transparent transition-all"
                placeholder="your.email@example.com"
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gh-fg-default mb-2"
              >
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-2.5 bg-gh-canvas-inset border border-gh-border-default rounded-md text-gh-fg-default focus:outline-none focus:ring-2 focus:ring-gh-accent-emphasis focus:border-transparent resize-none transition-all"
                placeholder="Your message..."></textarea>
            </div>

            <button type="submit" class="w-full btn btn-primary">
              <Icon name="paper-airplane" size={20} class="w-5 h-5" />
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { personalInfo } from "../data/portfolio";

  const form = document.querySelector("form");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const name = formData.get("name");
    const email = formData.get("email");
    const message = formData.get("message");

    // Create mailto link with user's email from portfolio data
    const subject = encodeURIComponent(`Portfolio Contact from ${name}`);
    const body = encodeURIComponent(
      `From: ${name}\nEmail: ${email}\n\nMessage:\n${message}`
    );

    window.location.href = `mailto:${personalInfo.email}?subject=${subject}&body=${body}`;
  });
</script>
