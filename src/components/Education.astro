---
import { education } from '../data/portfolio';
import Icon from './Icon.astro';
---

<section id="education" class="section section-alt">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">Education</h2>
      <p class="section-subtitle">Academic background and continuous learning journey</p>
    </div>

    <div class="max-w-3xl mx-auto">
      <!-- Timeline Container -->
      <div class="relative">
        <!-- Vertical Line -->
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gh-border-default"></div>
        
        <!-- Education Items (bottom to top) -->
        <div class="space-y-8">
          {education.map((edu, index) => {
            // Universal function to check if education is current/ongoing
            const isCurrentEducation = (period: string) => {
              const lowerPeriod = period.toLowerCase();
              return lowerPeriod.includes('present') || 
                     lowerPeriod.includes('current') || 
                     lowerPeriod.includes('ongoing');
            };
            
            const isCurrent = isCurrentEducation(edu.period);
            const isFirst = index === 0;
            
            const iconClassName = [
              "absolute left-0 w-8 h-8 rounded-full border-3",
              isCurrent
                ? "bg-gh-success-emphasis border-gh-success-muted shadow-lg"
                : "bg-gh-accent-subtle border-gh-accent-muted",
              isFirst && isCurrent ? "animate-pulse" : ""
            ].join(" ");
            
            return (
              <div class="relative pl-16 animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
                <!-- Node Circle -->
                <Icon name="dot" size={16} class={iconClassName} />

                <!-- Content Card -->
                <div class="card-highlight">
                  <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-2 flex-wrap">
                        <h3 class="text-lg font-semibold text-gh-fg-default">{edu.degree}</h3>
                        {isCurrent && (
                          <span class="px-2 py-1 rounded-full text-xs font-medium bg-gh-success-subtle text-gh-success-fg border border-gh-success-muted">
                            Ongoing
                          </span>
                        )}
                      </div>
                      <p class="text-gh-accent-fg font-medium mb-2">{edu.institution}</p>
                    </div>
                    <div class="flex flex-col items-start md:items-end gap-1 mt-2 md:mt-0">
                      <span class="badge text-xs">{edu.period}</span>
                      {edu.cgpa && (
                        <span class="text-gh-success-fg text-sm font-semibold">CGPA: {edu.cgpa}</span>
                      )}
                    </div>
                  </div>
                  
                  <p class="text-gh-fg-muted leading-relaxed text-sm">
                    {edu.description}
                  </p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>

    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-lg bg-gh-canvas-subtle border border-gh-border-default">
        <Icon name="check-circle" size={24} class="w-6 h-6 text-gh-success-fg animate-pulse" />
        <span class="text-gh-fg-muted text-sm md:text-base">
          Committed to continuous learning and professional development
        </span>
      </div>
    </div>
  </div>
</section>
