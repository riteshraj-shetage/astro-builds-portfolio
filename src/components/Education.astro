---
import { education } from '../data/portfolio';

// Check if education is current (last item in chronological order)
const currentYear = new Date().getFullYear();
---

<section id="education" class="section">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">Education</h2>
      <p class="section-subtitle">Academic background and continuous learning journey</p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-6">
        {education.map((edu, index) => {
          const isCurrent = edu.period.toLowerCase().includes('present') || 
                           edu.period.toLowerCase().includes('current') ||
                           edu.period.split('-').pop()?.trim() === currentYear.toString();
          
          return (
            <div class="card-highlight animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
              <div class="flex items-start gap-6">
                <div class={`p-3 rounded-lg ${isCurrent ? 'bg-gh-success-subtle border-gh-success-muted' : 'bg-gh-accent-subtle border-gh-accent-muted'} border flex-shrink-0`}>
                  <svg class={`w-8 h-8 ${isCurrent ? 'text-gh-success-fg' : 'text-gh-accent-fg'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                  </svg>
                </div>

                <div class="flex-1">
                  <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-2">
                        <h3 class="text-xl font-semibold text-gh-fg-default">{edu.degree}</h3>
                        {isCurrent && (
                          <span class="px-2 py-1 rounded-full text-xs font-medium bg-gh-success-subtle text-gh-success-fg border border-gh-success-muted">
                            Current
                          </span>
                        )}
                      </div>
                      <p class="text-gh-accent-fg font-medium mb-2">{edu.institution}</p>
                    </div>
                    <div class="flex flex-col items-start md:items-end gap-2 mt-2 md:mt-0">
                      <span class="badge">{edu.period}</span>
                      {edu.gpa && (
                        <span class="text-gh-success-fg text-sm font-semibold">GPA: {edu.gpa}</span>
                      )}
                    </div>
                  </div>
                  
                  <p class="text-gh-fg-muted leading-relaxed">
                    {edu.description}
                  </p>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>

    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-lg bg-gh-canvas-subtle border border-gh-border-default">
        <svg class="w-6 h-6 text-gh-success-fg animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-gh-fg-muted text-sm md:text-base">
          Committed to continuous learning and professional development
        </span>
      </div>
    </div>
  </div>
</section>
