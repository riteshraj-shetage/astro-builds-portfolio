---
import { education } from '../data/portfolio';
import Icon from './Icon.astro';
---

<section id="education" class="section">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">Education Journey</h2>
      <p class="section-subtitle">Academic background and continuous learning journey</p>
    </div>

    <div class="max-w-3xl mx-auto">
      <!-- GitHub Primer Timeline Container -->
      <div class="timeline">
        {education.map((edu, index) => {
          const isCurrent = edu.isCurrent || false;
          
          return (
            <div class="timeline-item" style={`animation-delay: ${index * 0.1}s`}>
              <!-- Timeline Badge (Dot) -->
              <div class="timeline-badge timeline-badge-accent">
                <Icon name={isCurrent ? "issue-opened" : "issue-closed"} size={16} class="w-4 h-4" />
              </div>
              
              <!-- Timeline Body (Content Card) -->
              <div class="timeline-body">
                <div class="card-highlight">
                  <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-2 flex-wrap">
                        <h3 class="text-xl font-semibold text-gh-fg-default">{edu.degree}</h3>
                      </div>                          
                        <Icon name="organization" size={16} class="w-4 h-4 text-gh-fg-muted inline-block mb-1 mr-1" />
                        {edu.instituteURL ? (
                        <a href={edu.instituteURL} class="mb-2 text-gh-fg-default hover:underline" target="_blank" rel="noopener noreferrer">
                          {edu.institution}
                        </a>
                        ) : (
                        <span class="text-gh-fg-default mb-2">
                          {edu.institution}
                        </span>
                        )}
                    </div>
                    <div class="flex flex-col items-start md:items-end gap-1 mt-2 md:mt-0">
                      <span class="badge text-xs">{edu.period}</span>
                      {edu.grade && (
                        <span class="text-gh-success-fg text-sm font-semibold">{edu.grade}</span>
                      )}
                    </div>
                  </div>
                  <p class="text-gh-fg-muted leading-relaxed font-medium text-sm">
                    {edu.description}
                  </p>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>

    <div class="mt-20 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-lg bg-gh-canvas-subtle border border-gh-border-default">
        <Icon name="check-circle" size={24} class="w-6 h-6 text-gh-success-fg" />
        <span class="text-gh-fg-muted text-sm md:text-base">
          Committed to continuous learning and professional development
        </span>
      </div>
    </div>
  </div>
</section>