---
import { personalInfo, highlights } from "../data/portfolio";
import Devicon from "./Devicon.astro";
import Icon from "./Icon.astro";
---

<section id="about" class="section">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">About Me</h2>
      <p class="section-subtitle">Building the future, one commit at a time</p>
    </div>

    <div class="max-w-6xl mx-auto">
      <!-- Overview and Highlights side by side -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Overview Section -->
        <div class="card-highlight animate-fade-in-up">
          <h3 class="text-2xl font-semibold text-gh-fg-default mb-4">
            <Icon
              name="person"
              size={24}
              class="w-6 h-6 text-gh-accent-fg inline-block mr-2 mb-1"
            />
            Overview
          </h3>

          <p class="text-gh-fg-muted leading-relaxed text-lg mb-6 text-justify">
            {personalInfo.bio}
          </p>

          <!-- Inspirational Quote - GitHub Primer Prose style -->
          <blockquote class="my-6">
            <div
              class="text-5xl text-gh-fg-muted text-md leading-none"
              aria-hidden="true"
            >
              &ldquo;
            </div>
            <p class="text-gh-fg-default">
              {personalInfo.quote}
            </p>
            <footer class="font-mono">
              {personalInfo.name}, {personalInfo.title}
            </footer>
          </blockquote>

          <div class="divider"></div>

          <div class="space-y-4">
            <div class="flex items-center gap-3 group">
              <div
                class="p-2 rounded-md bg-gh-canvas-subtle group-hover:bg-gh-accent-subtle transition-colors"
              >
                <Icon
                  name="location"
                  size={20}
                  class="w-5 h-5 text-gh-accent-fg"
                />
              </div>
              <span class="text-gh-fg-muted">{personalInfo.location}</span>
            </div>
            <div class="flex items-center gap-3 group">
              <div
                class="p-2 rounded-md bg-gh-canvas-subtle group-hover:bg-gh-accent-subtle transition-colors"
              >
                <Icon name="mail" size={20} class="w-5 h-5 text-gh-accent-fg" />
              </div>
              <a href={`mailto:${personalInfo.email}`} class="link-hover">
                {personalInfo.email}
              </a>
            </div>
          </div>
        </div>

        <!-- Highlights Section -->
        <div
          class="card-highlight animate-fade-in-up"
          style="animation-delay: 0.1s"
        >
          <h3 class="text-2xl font-semibold mb-6 text-gh-fg-default">
            <Icon
              name="sparkle"
              size={20}
              class="w-5 h-5 text-gh-success-fg inline-block mr-2 mb-1"
            />
            Highlights
          </h3>
          <div class="space-y-4">
            {
              highlights.map((highlight) => (
                <div class="flex items-start gap-3 p-4 rounded-lg bg-gh-canvas-subtle border border-gh-border-default hover:border-gh-success-muted transition-all group">
                  <div class="p-2 rounded-md bg-gh-success-subtle group-hover:bg-gh-success-emphasis transition-colors flex-shrink-0">
                    <Icon
                      name={highlight.icon}
                      size={20}
                      class="w-5 h-5 text-gh-success-fg group-hover:text-white transition-colors"
                    />
                  </div>
                  <div class="flex-1">
                    <h4 class="text-gh-fg-default mb-1">{highlight.title}</h4>
                    <p class="text-sm text-gh-fg-muted">
                      {highlight.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- View Resume Button -->
      <div class="mt-20 text-center">
        <a
          href="/resume.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-secondary inline-flex items-center gap-2"
        >
          <Icon name="file-badge" size={20} class="w-5 h-5 text-gh-fg-muted" />
          View Resume
        </a>
      </div>
    </div>
  </div>
</section>
