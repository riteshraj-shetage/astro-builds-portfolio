---
import { personalInfo } from '../data/portfolio';
---

<section id="about" class="section bg-gh-canvas-subtle">
  <div class="container-custom">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center">
      About Me
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="card mb-8 animate-slide-up">
        <div class="flex items-start gap-4 mb-6">
          <svg class="w-8 h-8 text-gh-accent-fg flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <div>
            <h3 class="text-2xl font-semibold mb-2">Who I Am</h3>
            <p class="text-gh-fg-muted leading-relaxed">
              {personalInfo.bio}
            </p>
          </div>
        </div>

        <div class="border-t border-gh-border-default pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-gh-fg-muted">{personalInfo.location}</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href={`mailto:${personalInfo.email}`} class="text-gh-accent-fg hover:underline">
                {personalInfo.email}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
