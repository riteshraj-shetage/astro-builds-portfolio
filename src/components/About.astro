---
import { personalInfo, highlights } from '../data/portfolio';
---

<section id="about" class="section section-alt">
  <div class="container-custom">
    <div class="section-header">
      <h2 class="section-title">About Me</h2>
      <p class="section-subtitle">Building the future, one commit at a time</p>
    </div>

    <div class="max-w-5xl mx-auto space-y-8">
      <!-- Main bio card -->
      <div class="card-highlight animate-fade-in-up">
        <div class="flex items-start gap-6">
          <div class="p-3 rounded-lg bg-gh-accent-subtle border border-gh-accent-muted flex-shrink-0">
            <svg class="w-8 h-8 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-2xl font-semibold mb-3 text-gh-fg-default">Overview</h3>
            <p class="text-gh-fg-muted leading-relaxed text-lg">
              {personalInfo.bio}
            </p>
          </div>
        </div>

        <div class="divider"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex items-center gap-3 group">
            <div class="p-2 rounded-md bg-gh-canvas-subtle group-hover:bg-gh-accent-subtle transition-colors">
              <svg class="w-5 h-5 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <span class="text-gh-fg-muted">{personalInfo.location}</span>
          </div>
          <div class="flex items-center gap-3 group">
            <div class="p-2 rounded-md bg-gh-canvas-subtle group-hover:bg-gh-accent-subtle transition-colors">
              <svg class="w-5 h-5 text-gh-accent-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <a href={`mailto:${personalInfo.email}`} class="link-hover">
              {personalInfo.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Highlights Section -->
      <div class="card-highlight animate-fade-in-up" style="animation-delay: 0.1s">
        <h3 class="text-2xl font-semibold mb-6 text-gh-fg-default">Highlights</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {highlights.map((highlight) => {
            let iconPath = "";
            if (highlight.icon === "experience") {
              iconPath = "M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z";
            } else if (highlight.icon === "opensource") {
              iconPath = "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4";
            } else if (highlight.icon === "learning") {
              iconPath = "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253";
            } else {
              iconPath = "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z";
            }
            
            return (
              <div class="flex items-start gap-3 p-4 rounded-lg bg-gh-canvas-subtle border border-gh-border-default hover:border-gh-accent-muted transition-all group">
                <div class="p-2 rounded-md bg-gh-accent-subtle group-hover:bg-gh-accent-emphasis transition-colors flex-shrink-0">
                  <svg class="w-5 h-5 text-gh-accent-fg group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
                  </svg>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-gh-fg-default mb-1">{highlight.title}</h4>
                  <p class="text-sm text-gh-fg-muted">{highlight.description}</p>
                </div>
              </div>
            );
          })}
        </div>
      </div>

      <!-- View Resume Button -->
      <div class="mt-8 text-center">
        <a 
          href="/resume.pdf" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn btn-primary inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          View Resume
        </a>
      </div>
    </div>
  </div>
</section>
