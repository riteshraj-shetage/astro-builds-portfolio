---
import { credentials } from '../data/portfolio';
---

<section id="credentials" class="section bg-gh-canvas-subtle">
  <div class="container-custom">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center">
      Credentials & Certifications
    </h2>

    <div class="max-w-4xl mx-auto space-y-6">
      {credentials.map((cred, index) => (
        <div class="card animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gh-success-subtle rounded-lg flex items-center justify-center border border-gh-success-muted">
              <svg class="w-6 h-6 text-gh-success-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>

            <div class="flex-1">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-2">
                <div>
                  <h3 class="text-xl font-semibold text-gh-fg-default mb-1">{cred.title}</h3>
                  <p class="text-gh-accent-fg font-medium">{cred.issuer}</p>
                </div>
                <div class="flex flex-col items-start md:items-end gap-1 mt-2 md:mt-0">
                  <span class="text-gh-fg-muted text-sm">{cred.date}</span>
                  {cred.credentialId && (
                    <span class="text-gh-fg-muted text-xs">ID: {cred.credentialId}</span>
                  )}
                </div>
              </div>
              
              <p class="text-gh-fg-muted leading-relaxed">
                {cred.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 bg-gh-canvas-default border border-gh-border-default rounded-lg">
        <svg class="w-6 h-6 text-gh-success-fg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-gh-fg-muted">
          Continuously pursuing professional certifications and skill development
        </span>
      </div>
    </div>
  </div>
</section>
