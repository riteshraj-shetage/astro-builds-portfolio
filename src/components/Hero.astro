---
import { personalInfo } from "../data/portfolio";
import Icon from "./Icon.astro";
import { Image } from "astro:assets";
---

<section
  id="home"
  class="section min-h-screen flex items-center relative overflow-hidden pt-20 md:pt-24"
>
  <!-- Background gradient effect -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-gh-canvas-default via-gh-canvas-subtle to-gh-canvas-default opacity-50"
  >
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-6xl mx-auto">
      <div
        class="flex flex-col md:flex-row-reverse items-center gap-16 md:gap-20 animate-fade-in-up"
      >
        <!-- Avatar with GitHub-style border -->
        <div class="flex-shrink-0">
          <div class="relative">
            <div
              class="w-56 h-56 md:w-72 md:h-72 rounded-full border-2 border-gh-border-default bg-gh-canvas-default animate-fade-in overflow-hidden"
            >
              <Image
                src={personalInfo.profileImage ||
                  "/images/profile-placeholder.svg"}
                alt={personalInfo.name}
                width={288}
                height={288}
                class="w-full h-full object-cover"
                loading="eager"
                decoding="async"
              />
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="flex-1 text-center md:text-left space-y-8 md:space-y-10">
          <!-- Name and Title -->
          <div class="space-y-6">
            <h1
              class="text-4xl md:text-5xl lg:text-6xl font-semibold text-gh-fg-default leading-tight"
            >
              {personalInfo.name}
            </h1>

            <p
              class="text-xl md:text-2xl lg:text-3xl text-gh-fg-muted font-light"
            >
              {personalInfo.title}
            </p>
          </div>

          <!-- TagLine -->
          <p
            class="text-base md:text-lg text-gh-fg-subtle leading-relaxed max-w-2xl mx-auto md:mx-0"
          >
            {personalInfo.tagLine}
          </p>

          <!-- CTA Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start items-center pt-4"
          >
            <a href="#projects" class="btn btn-primary min-w-[180px]">
              <Icon name="apps" size={20} class="w-5 h-5" />
              View Projects
            </a>
            <a href="#contact" class="btn btn-secondary min-w-[180px]">
              <Icon name="mail" size={20} class="w-5 h-5" />
              Get in Touch
            </a>
          </div>

          <!-- Social Links -->
          <div class="flex gap-5 justify-center md:justify-start pt-6">
            <a
              href={personalInfo.github}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 rounded-full bg-gh-accent-subtle border-2 border-gh-accent-muted hover:border-gh-accent-fg hover:bg-gh-accent-emphasis hover:scale-110 active:scale-95 transition-all duration-200 ease-in-out group shadow-md"
              aria-label="GitHub"
            >
              <Icon
                name="mark-github"
                size={24}
                class="w-6 h-6 text-gh-accent-fg group-hover:text-white transition-colors duration-200"
              />
            </a>
            <a
              href={personalInfo.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 rounded-full bg-gh-accent-subtle border-2 border-gh-accent-muted hover:border-gh-accent-fg hover:bg-gh-accent-emphasis hover:scale-110 active:scale-95 transition-all duration-200 ease-in-out group shadow-md"
              aria-label="LinkedIn"
            >
              <svg
                class="w-6 h-6 text-gh-accent-fg group-hover:text-white transition-colors duration-200"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="hidden md:block pt-20 text-center animate-bounce">
        <a
          href="#about"
          class="inline-block text-gh-fg-subtle hover:text-gh-accent-fg transition-colors no-underline"
          aria-label="Scroll to about section"
        >
          <Icon name="arrow-down" size={24} class="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</section>
