---
import { personalInfo } from '../data/portfolio';
---

<section id="home" class="section min-h-screen flex items-center relative overflow-hidden">
  <!-- Background gradient effect -->
  <div class="absolute inset-0 bg-gradient-to-b from-gh-canvas-default via-gh-canvas-subtle to-gh-canvas-default opacity-50"></div>
  
  <div class="container-custom relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16 animate-fade-in-up">
        
        <!-- Avatar with GitHub-style border -->
        <div class="flex-shrink-0">
          <div class="relative">
            <div class="w-48 h-48 md:w-64 md:h-64 rounded-full bg-gradient-to-br from-gh-accent-emphasis via-gh-success-emphasis to-gh-accent-emphasis p-0.5 animate-scale-in">
              {personalInfo.profileImage ? (
                <img 
                  src={personalInfo.profileImage} 
                  alt={personalInfo.name}
                  class="w-full h-full rounded-full object-cover bg-gh-canvas-default"
                />
              ) : (
                <div class="w-full h-full rounded-full bg-gh-canvas-default flex items-center justify-center text-7xl md:text-8xl font-bold text-gh-accent-fg">
                  {personalInfo.name.charAt(0)}
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="flex-1 text-center md:text-left space-y-6">
          <!-- Name and Title -->
          <div class="space-y-3">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gh-fg-default leading-tight pb-2">
              {personalInfo.name}
            </h1>

            <p class="text-xl md:text-2xl lg:text-3xl text-gh-fg-muted font-light">
              {personalInfo.title}
            </p>
          </div>

          <!-- Bio -->
          <p class="text-base md:text-lg text-gh-fg-subtle leading-relaxed">
            {personalInfo.bio}
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start items-center pt-2">
            <a href="#projects" class="btn btn-primary min-w-[180px]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
              View Projects
            </a>
            <a href="#contact" class="btn btn-secondary min-w-[180px]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Get in Touch
            </a>
          </div>

          <!-- Social Links -->
          <div class="flex gap-4 justify-center md:justify-start pt-4">
            <a 
              href={personalInfo.github} 
              target="_blank" 
              rel="noopener noreferrer"
              class="p-3 rounded-full bg-gh-accent-subtle border-2 border-gh-accent-muted hover:border-gh-accent-fg hover:bg-gh-accent-emphasis hover:scale-110 transition-all group no-underline shadow-md"
              aria-label="GitHub"
            >
              <svg class="w-6 h-6 text-gh-accent-fg group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
              </svg>
            </a>
            <a 
              href={personalInfo.linkedin} 
              target="_blank" 
              rel="noopener noreferrer"
              class="p-3 rounded-full bg-gh-accent-subtle border-2 border-gh-accent-muted hover:border-gh-accent-fg hover:bg-gh-accent-emphasis hover:scale-110 transition-all group no-underline shadow-md"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6 text-gh-accent-fg group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="pt-16 text-center animate-bounce">
        <a href="#about" class="inline-block text-gh-fg-subtle hover:text-gh-accent-fg transition-colors no-underline" aria-label="Scroll to about section">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
