---
import { personalInfo } from "../data/portfolio";
import Icon from "./Icon.astro";

const navItems = [
  { name: "About", icon: "person", href: "#about" },
  { name: "Skills", icon: "tools", href: "#skills" },
  { name: "Projects", icon: "apps", href: "#projects" },
  { name: "Credentials", icon: "verified", href: "#credentials" },
  { name: "Education", icon: "mortar-board", href: "#education" },
  { name: "Contact", icon: "mail", href: "#contact" },
];
---

<header
  class="sticky top-0 z-50 bg-gh-canvas-default border-b border-gh-border-default shadow-sm"
>
  <nav class="container-custom py-3">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a
        href="#home"
        class="flex items-center gap-2.5 no-underline transition-all group"
      >
        <div
          class="w-10 h-10 transition-transform group-hover:scale-110 text-gh-fg-default"
        >
          <img
            src={personalInfo.brandLogo}
            alt="Logo"
            class="w-full h-full rounded-md"
          />
        </div>
        <span class="text-2xl font-semibold tracking-tight text-gh-fg-default"
          >{personalInfo.brandName}</span
        >
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-2 relative">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="nav-link px-2.5 py-2 text-md text-gh-fg-default hover:bg-gh-canvas-subtle rounded-md transition-all no-underline"
              data-section={item.href.substring(1)}
            >
              {/* {item.icon && (
                <Icon
                  name={item.icon}
                  size={16}
                  class="w-5 h-5 mr-1 mb-1 inline-block text-gh-fg-muted"
                />
              )} */}
              {item.name}
            </a>
          ))
        }
        <span
          class="nav-underline-bar absolute -bottom-3 left-0 h-0.5 bg-gh-rose transform transition-all duration-300 ease-out"
          style="width: 0; opacity: 0;"></span>

        <!-- Theme Toggle Button (Desktop) -->
        <button
          id="theme-toggle"
          class="ml-1 p-2 text-gh-fg-default hover:text-gh-accent-fg hover:bg-gh-canvas-subtle rounded-md transition-all relative tooltip-container"
          aria-label="Toggle theme"
        >
          <Icon name="sun" size={20} class="w-5 h-5 hidden" id="sun-icon" />
          <Icon name="moon" size={20} class="w-5 h-5" id="moon-icon" />
          <span class="tooltip">Toggle theme</span>
        </button>
      </div>

      <!-- Mobile Menu and Theme Toggle Buttons -->
      <div class="md:hidden flex items-center gap-2">
        <!-- Theme Toggle Button (Mobile) -->
        <button
          id="theme-toggle-mobile"
          class="p-2 text-gh-fg-default hover:text-gh-accent-fg hover:bg-gh-canvas-subtle rounded-md transition-all relative tooltip-container"
          aria-label="Toggle theme"
        >
          <Icon
            name="sun"
            size={20}
            class="w-5 h-5 hidden"
            id="sun-icon-mobile"
          />
          <Icon name="moon" size={20} class="w-5 h-5" id="moon-icon-mobile" />
          <span class="tooltip">Toggle theme</span>
        </button>

        <button
          id="mobile-menu-button"
          class="p-2 text-gh-fg-default hover:text-gh-accent-fg hover:bg-gh-canvas-subtle rounded-md transition-all"
          aria-label="Toggle menu"
        >
          <Icon name="three-bars" size={24} class="w-6 h-6" id="menu-icon" />
          <Icon name="x" size={24} class="w-6 h-6 hidden" id="close-icon" />
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-3 pt-3 border-t border-gh-border-default animate-slide-down"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2.5 text-md text-center text-gh-fg-default no-underline hover:text-gh-fg-default hover:bg-gh-canvas-subtle rounded-md transition-all mb-1"
          >
            {/* {item.icon && (
              <Icon
                name={item.icon}
                size={16}
                class="w-4 h-4 mr-1 mb-1 inline-block text-gh-fg-muted"
              />
            )} */}
            {item.name}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    });
  });

  // Add scroll effect to header
  const header = document.querySelector("header");

  window.addEventListener("scroll", () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header?.classList.add("shadow-md");
    } else {
      header?.classList.remove("shadow-md");
    }
  });

  // Theme toggle functionality
  const themeToggle = document.getElementById("theme-toggle");
  const themeToggleMobile = document.getElementById("theme-toggle-mobile");
  const sunIcon = document.getElementById("sun-icon");
  const moonIcon = document.getElementById("moon-icon");
  const sunIconMobile = document.getElementById("sun-icon-mobile");
  const moonIconMobile = document.getElementById("moon-icon-mobile");

  // Update icon visibility based on current theme
  const updateIcons = (): void => {
    const isDark = document.documentElement.classList.contains("dark");
    if (isDark) {
      sunIcon?.classList.add("hidden");
      moonIcon?.classList.remove("hidden");
      sunIconMobile?.classList.add("hidden");
      moonIconMobile?.classList.remove("hidden");
    } else {
      sunIcon?.classList.remove("hidden");
      moonIcon?.classList.add("hidden");
      sunIconMobile?.classList.remove("hidden");
      moonIconMobile?.classList.add("hidden");
    }
  };

  // Initialize icons based on default dark theme
  updateIcons();

  // Toggle theme
  const toggleTheme = () => {
    document.documentElement.classList.toggle("dark");
    updateIcons();
  };

  themeToggle?.addEventListener("click", toggleTheme);
  themeToggleMobile?.addEventListener("click", toggleTheme);

  // Active section detection based on scroll
  const sections = document.querySelectorAll("section[id]");
  const navLinks = document.querySelectorAll(".nav-link");
  const navUnderlineBar = document.querySelector(
    ".nav-underline-bar",
  ) as HTMLElement;
  let currentActiveSection = "";

  // Constants for scroll detection
  const SCROLL_THRESHOLD = 100;
  const HEADER_OFFSET = 150;

  const setActiveLink = () => {
    const scrollY = window.pageYOffset;
    let activeSection = "";

    // Find the current active section
    if (scrollY < SCROLL_THRESHOLD) {
      activeSection = "home";
    } else {
      sections.forEach((section) => {
        const sectionTop = (section as HTMLElement).offsetTop;
        const sectionHeight = (section as HTMLElement).offsetHeight;
        const sectionId = section.getAttribute("id") || "";

        // Check if section is in view (with offset for header)
        if (
          scrollY >= sectionTop - HEADER_OFFSET &&
          scrollY < sectionTop + sectionHeight - HEADER_OFFSET
        ) {
          activeSection = sectionId;
        }
      });
    }

    // Only update DOM if active section changed
    if (activeSection && activeSection !== currentActiveSection) {
      currentActiveSection = activeSection;

      // Find the active link
      let activeLinkElement: Element | null = null;
      navLinks.forEach((link) => {
        const linkSection = link.getAttribute("data-section");
        if (linkSection === activeSection) {
          activeLinkElement = link;
        }
      });

      // Update underline bar position
      if (activeLinkElement && navUnderlineBar) {
        const linkElement = activeLinkElement as HTMLElement;
        const linkRect = linkElement.getBoundingClientRect();
        const navContainer = linkElement.closest(".md\\:flex");
        const containerRect = navContainer?.getBoundingClientRect();

        if (containerRect) {
          const leftPosition = linkRect.left - containerRect.left;
          navUnderlineBar.style.width = `${linkRect.width}px`;
          navUnderlineBar.style.transform = `translateX(${leftPosition}px)`;
          navUnderlineBar.style.opacity = "1";
        }
      } else if (navUnderlineBar) {
        navUnderlineBar.style.opacity = "0";
      }
    }
  };

  // Run on scroll and initially
  window.addEventListener("scroll", setActiveLink);
  setActiveLink();
</script>
